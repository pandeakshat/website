---
import blogs from '../data/blogs.json';
---

<section id="blog" class="py-20 text-foreground px-4">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-4xl font-bold mb-12 text-blog">Blog</h2>

    <div class="flex overflow-x-auto gap-4 snap-x snap-mandatory scroll-smooth px-2">
      {blogs.map(blog => (
        <a href={blog.link} target="_blank" class="min-w-[300px] w-[320px] h-[440px] flex-shrink-0 snap-start block border border-border rounded-lg overflow-hidden hover:border-blog/80 transition-all duration-200 bg-card/80 backdrop-blur-sm">
          <img src={blog.image} alt={blog.title + ' cover'} class="w-full h-40 object-cover" />
          <div class="p-4 flex flex-col justify-between h-[calc(100%-160px)]">
            <h3 class="text-2xl font-semibold mb-1 leading-snug">{blog.title}</h3>
            <p class="text-muted text-sm mb-2 line-clamp-2">{blog.subtitle}</p>
            <p class="text-xs italic mb-3">{blog.status}</p>
            <div class="flex flex-wrap gap-2 mt-auto">
              {blog.tags.map(tag => (
                <span class="text-xs px-2 py-1 bg-blog text-black rounded-full">{tag}</span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>